<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rounded_corner"
    android:paddingBottom="30dp"
    tools:context=".SecondFragment">

    <ImageView
        android:id="@+id/new_functionalities"
        android:layout_width="0dp"
        android:layout_height="286dp"
        android:layout_margin="20dp"
        android:src="@drawable/new_functionalities_foreground"
        app:layout_constraintBottom_toTopOf="@id/text_new_app_version"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0" />

    <TextView
        android:id="@+id/text_new_app_version"
        android:layout_width="0dp"
        android:layout_height="22dp"
        android:text="O App Bradesco já tem uma nova versão"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/text_update_app_to_continue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="0" />

    <TextView
        android:id="@+id/text_update_app_to_continue"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Pra continuar, atualize\nseu aplicativo ;)"
        android:textAlignment="center"
        android:textColor="#47484C"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_new_app_version" />

    <Button
        android:id="@+id/bt_update_app"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="50.5dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/button_red"
        android:text="Atualizar"
        android:textColor="#ffffff"
        app:backgroundTint="#E1173F"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_update_app_to_continue" />

</androidx.constraintlayout.widget.ConstraintLayout>
